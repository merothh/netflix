<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AppCompat.DialogWhenLarge" parent="@style/Base.Theme.AppCompat.Dialog.FixedSize" />
    <style name="Base.Theme.AppCompat.Light.DialogWhenLarge" parent="@style/Base.Theme.AppCompat.Light.Dialog.FixedSize" />
    <style name="ProfileDetailsContents" parent="@style/match">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/profile_details_tablet_background</item>
        <item name="android:layout_width">700.0dip</item>
        <item name="android:layout_marginTop">@dimen/profile_details_top_content_margin</item>
        <item name="android:layout_marginBottom">@dimen/profile_details_main_margin</item>
        <item name="android:paddingStart">@dimen/profile_details_main_margin</item>
        <item name="android:paddingEnd">@dimen/profile_details_main_margin</item>
    </style>
    <style name="ProfileDetailsText" parent="@style/PrimaryText.Medium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="ProfileTopActionsButtons" parent="@style/match">
        <item name="android:gravity">center</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:layout_width">170.0dip</item>
    </style>
    <style name="Theme.AvatarsGrid" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:progressBarStyle">@style/Netflix.ProgressBar</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
